<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginEnd="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/image_non_veg"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/itemListKitchenMenuNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/neue_haas_grotesk_medium"
                android:textSize="16sp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/itemListKitchenMenuDescriptionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/neue_haas_grotesk_regular"/>

            <TextView
                android:id="@+id/itemListKitchenMenuPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/neue_haas_grotesk_medium"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/itemListKitchenMenuAvailableTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cannot add more than 2"
                android:textSize="14sp"
                android:textColor="@color/lightRed"
                android:fontFamily="@font/neue_haas_grotesk_regular"
                android:layout_marginTop="5dp"
                android:visibility="gone"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/black">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/itemListKitchenMenuImageIV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/itemListKitchenMenuAddButtonCV"
                android:layout_width="90dp"
                android:layout_height="30dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/yellow"
                app:cardCornerRadius="5dp"
                android:layout_gravity="center"
                android:layout_marginTop="-15dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="4dp"
                    android:layout_margin="1dp">

                    <LinearLayout
                        android:id="@+id/itemListKitchenMenuCountLL"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:animateLayoutChanges="true"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/itemListKitchenMenuMinusTV"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:text="-"
                            android:textSize="22sp"
                            android:textColor="@color/yellow"
                            android:fontFamily="@font/neue_haas_grotesk_medium"
                            android:gravity="center"
                            android:layout_marginTop="-2dp"/>

                        <TextView
                            android:id="@+id/itemListKitchenMenuCountTV"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/neue_haas_grotesk_medium"
                            android:gravity="center"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/itemListKitchenMenuPlusTV"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:text="+"
                            android:textSize="22sp"
                            android:textColor="@color/yellow"
                            android:fontFamily="@font/neue_haas_grotesk_medium"
                            android:gravity="center"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/itemListKitchenMenuAddTV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Add"
                        android:textSize="16sp"
                        android:textColor="@color/yellow"
                        android:fontFamily="@font/neue_haas_grotesk_medium"
                        android:gravity="center"/>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/itemListKitchenMenuView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:alpha="0.2"
        android:layout_marginTop="15dp"/>

</LinearLayout>